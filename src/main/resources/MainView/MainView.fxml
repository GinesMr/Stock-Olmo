<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.geometry.Insets?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/23.0.1"  xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController.EasyManageController">
   <center>
      <TabPane>
         <tabs>
            <Tab text="Clientes">
               <VBox spacing="10">
                  <HBox spacing="10">
                     <TextField fx:id="clienteDniField" promptText="DNI del cliente" />
                     <TextField fx:id="clienteNombreField" promptText="Nombre del cliente" />
                     <TextField fx:id="clienteDireccionField" promptText="Dirección" />
                     <TextField fx:id="clienteTelefonoField" promptText="Teléfono" />
                     <TextField fx:id="clienteEmailField" promptText="Email" />
                     <Button fx:id="agregarClienteButton" text="Agregar Cliente" />
                     <Button fx:id="actualizarClienteButton" text="Actualizar Cliente" />
                     <Button fx:id="eliminarClienteButton" text="Eliminar Cliente" />
                     <HBox spacing="10">
                        <!-- Aplicar margen izquierdo al TextField -->
                        <TextField fx:id="buscarCliente" promptText="Atributo de Cliente">
                           <HBox.margin>
                              <Insets left="120" />
                           </HBox.margin>
                        </TextField>
                     </HBox>

                  </HBox>
                  <TableView fx:id="clientesTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colDni" text="DNI">
                           <minWidth>100.0</minWidth>
                           <prefWidth>150.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                        <TableColumn fx:id="colNombre" text="Nombre">
                           <minWidth>100.0</minWidth>
                           <prefWidth>150.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                        <TableColumn fx:id="colDireccion" text="Dirección">
                           <minWidth>150.0</minWidth>
                           <prefWidth>200.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                        <TableColumn fx:id="colTelefono" text="Teléfono">
                           <minWidth>100.0</minWidth>
                           <prefWidth>120.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                        <TableColumn fx:id="colEmail" text="Email">
                           <minWidth>150.0</minWidth>
                           <prefWidth>200.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                        <TableColumn fx:id="colFechaRegistro" text="Fecha de Registro">
                           <minWidth>120.0</minWidth>
                           <prefWidth>150.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                     </columnResizePolicy>
                  </TableView>
               </VBox>
            </Tab>
            <Tab text="Productos">
               <VBox spacing="10">
                  <HBox spacing="10">
                     <TextField fx:id="productoNombreField" promptText="Nombre del producto" />
                     <TextField fx:id="productoDescripcionField" promptText="Descripción" />
                     <TextField fx:id="productoPrecioField" promptText="Precio" />
                     <TextField fx:id="productoStockField" promptText="Stock" />
                     <Button fx:id="agregarProductoButton" text="Agregar Producto" />
                     <Button fx:id="actualizarProductoButton" text="Actualizar Producto" />
                     <Button fx:id="eliminarProductoButton" text="Eliminar Producto" />
                  </HBox>
                  <TableView fx:id="productosTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colProductoNombre" text="Nombre">
                           <minWidth>150.0</minWidth>
                           <prefWidth>200.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                        <TableColumn fx:id="colProductoDescripcion" text="Descripción">
                           <minWidth>200.0</minWidth>
                           <prefWidth>300.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                        <TableColumn fx:id="colProductoPrecio" text="Precio">
                           <minWidth>100.0</minWidth>
                           <prefWidth>150.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                        <TableColumn fx:id="colProductoStock" text="Stock">
                           <minWidth>80.0</minWidth>
                           <prefWidth>100.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                     </columnResizePolicy>
                  </TableView>
               </VBox>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>