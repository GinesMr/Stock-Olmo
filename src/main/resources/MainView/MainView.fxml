<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController.EasyManageController">
   <center>
      <TabPane>
         <tabs>
            <Tab closable="false" text="Clientes">
               <VBox spacing="10">
                  <HBox spacing="10">
                     <TextField fx:id="clienteDniField" promptText="DNI del cliente">
                        <tooltip>
                           <Tooltip text="Ingrese el DNI del cliente (solo números)." />
                        </tooltip>
                     </TextField>
                     <TextField fx:id="clienteNombreField" promptText="Nombre del cliente">
                        <tooltip>
                           <Tooltip text="Ingrese el nombre completo del cliente." />
                        </tooltip>
                     </TextField>
                     <TextField fx:id="clienteDireccionField" promptText="Dirección">
                        <tooltip>
                           <Tooltip text="Ingrese la dirección del cliente." />
                        </tooltip>
                     </TextField>
                     <TextField fx:id="clienteTelefonoField" promptText="Teléfono">
                        <tooltip>
                           <Tooltip text="Ingrese el número de teléfono del cliente." />
                        </tooltip>
                     </TextField>
                     <TextField fx:id="clienteEmailField" promptText="Email">
                        <tooltip>
                           <Tooltip text="Ingrese el correo electrónico del cliente." />
                        </tooltip>
                     </TextField>
                     <Button fx:id="agregarClienteButton" text="Agregar Cliente">
                        <tooltip>
                           <Tooltip text="Agrega un nuevo cliente a la base de datos." />
                        </tooltip>
                     </Button>
                     <Button fx:id="actualizarClienteButton" text="Actualizar Cliente">
                        <tooltip>
                           <Tooltip text="Actualiza la información del cliente seleccionado." />
                        </tooltip>
                     </Button>
                     <Button fx:id="eliminarClienteButton" text="Eliminar Cliente">
                        <tooltip>
                           <Tooltip text="Elimina el cliente seleccionado de la base de datos." />
                        </tooltip>
                     </Button>
                     <HBox spacing="10">
                        <TextField fx:id="buscarCliente" promptText="Buscar Cliente">
                           <tooltip>
                              <Tooltip text="Busca un cliente por DNI, nombre o email." />
                           </tooltip>
                           <HBox.margin>
                              <Insets left="120" />
                           </HBox.margin>
                        </TextField>
                     </HBox>
                  </HBox>
                  <TableView fx:id="clientesTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colDni" text="DNI">
                           <minWidth>100.0</minWidth>
                           <prefWidth>150.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                        <TableColumn fx:id="colNombre" text="Nombre">
                           <minWidth>100.0</minWidth>
                           <prefWidth>150.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                        <TableColumn fx:id="colDireccion" text="Dirección">
                           <minWidth>150.0</minWidth>
                           <prefWidth>200.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                        <TableColumn fx:id="colTelefono" text="Teléfono">
                           <minWidth>100.0</minWidth>
                           <prefWidth>120.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                        <TableColumn fx:id="colEmail" text="Email">
                           <minWidth>150.0</minWidth>
                           <prefWidth>200.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                        <TableColumn fx:id="colFechaRegistro" text="Fecha de Registro">
                           <minWidth>120.0</minWidth>
                           <prefWidth>150.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </VBox>
            </Tab>
            <Tab closable="false" text="Productos">
               <VBox spacing="10">
                  <HBox spacing="10">
                     <TextField fx:id="idNombreField" promptText="Id del producto">
                        <tooltip>
                           <Tooltip text="Ingrese el ID del producto (solo números)." />
                        </tooltip>
                     </TextField>
                     <TextField fx:id="productoNombreField" promptText="Nombre del producto">
                        <tooltip>
                           <Tooltip text="Ingrese el nombre del producto." />
                        </tooltip>
                     </TextField>
                     <TextField fx:id="productoDescripcionField" promptText="Descripción">
                        <tooltip>
                           <Tooltip text="Ingrese una descripción del producto." />
                        </tooltip>
                     </TextField>
                     <TextField fx:id="productoPrecioField" promptText="Precio">
                        <tooltip>
                           <Tooltip text="Ingrese el precio del producto (solo números)." />
                        </tooltip>
                     </TextField>
                     <TextField fx:id="productoStockField" promptText="Stock">
                        <tooltip>
                           <Tooltip text="Ingrese la cantidad en stock del producto (solo números)." />
                        </tooltip>
                     </TextField>
                     <Button fx:id="agregarProductoButton" text="Agregar Producto">
                        <tooltip>
                           <Tooltip text="Agrega un nuevo producto a la base de datos." />
                        </tooltip>
                     </Button>
                     <Button fx:id="actualizarProductoButton" text="Actualizar Producto">
                        <tooltip>
                           <Tooltip text="Actualiza la información del producto seleccionado." />
                        </tooltip>
                     </Button>
                     <Button fx:id="eliminarProductoButton" text="Eliminar Producto">
                        <tooltip>
                           <Tooltip text="Elimina el producto seleccionado de la base de datos." />
                        </tooltip>
                     </Button>
                     <HBox spacing="10">
                        <TextField fx:id="buscarProducto" promptText="Buscar Producto">
                           <tooltip>
                              <Tooltip text="Busca un producto por ID, nombre o descripción." />
                           </tooltip>
                           <HBox.margin>
                              <Insets left="120" />
                           </HBox.margin>
                        </TextField>
                     </HBox>
                  </HBox>
                  <TableView fx:id="productosTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colProductoId" text="id">
                           <minWidth>150.0</minWidth>
                           <prefWidth>200.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                        <TableColumn fx:id="colProductoNombre" text="Nombre">
                           <minWidth>150.0</minWidth>
                           <prefWidth>200.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                        <TableColumn fx:id="colProductoDescripcion" text="Descripción">
                           <minWidth>200.0</minWidth>
                           <prefWidth>300.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                        <TableColumn fx:id="colProductoPrecio" text="Precio">
                           <minWidth>100.0</minWidth>
                           <prefWidth>150.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                        <TableColumn fx:id="colProductoStock" text="Stock">
                           <minWidth>80.0</minWidth>
                           <prefWidth>100.0</prefWidth>
                           <maxWidth>Infinity</maxWidth>
                        </TableColumn>
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </VBox>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>